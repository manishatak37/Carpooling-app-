<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:orientation="vertical"
    android:background="@drawable/searchpage_gradient"
android:layout_height="match_parent"
tools:context=".User.UserHomePage">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#60ED66" >

    <ImageButton
        android:id="@+id/buttondrawerToggle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/drawable_menu"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:contentDescription="Toggle Drawer" />


</androidx.appcompat.widget.Toolbar>






</LinearLayout>