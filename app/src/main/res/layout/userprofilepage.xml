<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".UserProfilePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Picture Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="219dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgProfilePicture"
                    android:layout_width="168dp"
                    android:layout_height="163dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/profile"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/profile" />

                <!-- Name Field -->
                <EditText
                    android:id="@+id/edtUserName"
                    android:layout_width="267dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:background="?android:attr/editTextBackground"
                    android:hint="Enter your name"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp"
                    android:textDirection="ltr"
                    android:textAlignment="textStart"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- About You Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/txtAboutYouTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About You"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textDirection="ltr"
                    />

                <EditText
                    android:id="@+id/edtAboutYou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/editTextBackground"
                    android:hint="Tell us about yourself"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLines="5"
                    android:padding="8dp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="16sp"
                    android:textDirection="ltr"
                    android:textAlignment="textStart"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Travel Preferences Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/TravelPreferencesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travel Preferences"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/txtTravelPreferencesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:background="?android:attr/editTextBackground"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rides Shared -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="171dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/txtRidesTaken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Rides taken"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtRidesCount"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:gravity="center_horizontal"
                    android:text="1"
                    android:textAlignment="center"
                    android:textDirection="ltr" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="186dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/txtAgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="clip_horizontal|center|top"
                    android:text="Age"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtAgeValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:gravity="center"
                    android:text="23"
                    android:textAlignment="center"
                    android:textDirection="ltr" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
